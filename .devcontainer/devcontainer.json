{
  "name": "ETL service container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "extensions": [
        "ocamllabs.ocaml-platform",
        "gitlens.gitlens"
      ]
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "bash /home/vscode/postCreate.sh",
  "postAttachCommand": "bash /home/vscode/postAttach.sh",
  "remoteUser": "vscode"
}
